@model IEnumerable<StageBear.Models.Venue>

@{
    ViewData["Title"] = "Manage Venues";
}

<h1>Manage Venues</h1>

<p>
    <a asp-action="Create" class="btn">Add New Venue</a>
</p>

<form>
    <div class="row g-2 align-items-center">
        <div class="col-auto m-2">
            <label for="searchBox" class="col-form-label">Search Venues by Name or Location: </label>
        </div>
        <div class="col-auto m-2">
            <input type="text" id="searchbox" name="searchString" class="form-control" value="@(ViewData["CurrentFilter"] as string)" />
        </div>
        <div class="col-auto m-2">
            <input type="submit" value="Search" class="btn" />
        </div>
        <div class="col-auto m-2">
            <a asp-action="Index">Back to Full List</a>
        </div>
    </div>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.VenueName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Region)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.VenueName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Region)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.VenueId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.VenueId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.VenueId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
